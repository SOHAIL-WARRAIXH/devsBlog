<div class="card mb-4">
  <div class="card-body">
    <h5 class="card-title"><%= link_to post.title, post_path(post), class: "text-decoration-none" %></h5>
    <h6 class="card-subtitle mb-2 text-muted">Posted by <%= link_to post.user.username, profile_path(post.user), class: "text-decoration-none" %> about <%= time_ago_in_words(post.created_at) %> ago</h6>
    <p class="card-text"><%= truncate(post.content, length: 150) %></p>
    <%= link_to "Read More", post_path(post), class: "btn btn-primary btn-sm" %>

    <div class="d-flex justify-content-end align-items-center mt-2">
      <div class="d-flex align-items-center me-3">
        <i class="far fa-heart me-1"></i> <%= post.likes.count %>
      </div>
      <div class="d-flex align-items-center">
        <i class="far fa-comment me-1"></i> <%= post.comments.count %>
      </div>
    </div>
  </div>
</div>
 