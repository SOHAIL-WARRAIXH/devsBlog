            <%= link_to new_user_session_path, class: "nav-link animate-hover-lift #{'active' if current_page?(new_user_session_path)}" do %>
              <i class="bi bi-box-arrow-in-right me-1"></i> Sign In
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-light" %>
          </li>
        <% end %>
